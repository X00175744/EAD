@page "/"
@inject HttpClient Http
@using System.Net.Http
@using System.Text
@using System.Web
@using System.Net.Http.Json
@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;

<h3>Skills</h3>
<h5>All skills available to the player in the Capcom title "Monster Hunter World".</h5>

@if (spellsData != null)
{
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Desc.</th>
				<th>ID</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var i in spellsData)
			{
				<tr>
					<td>
						@i.name
					</td>
					<td>
						@i.description
					</td>
					<td>
						@i.id
					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>One Moment...</p>
}

@code {

	private Skill[] spellsData;


	protected override async Task OnInitializedAsync()
	{
		try
		{
			spellsData = await Http.GetFromJsonAsync<Skill[]>("https://mhw-db.com/skills");
		}
		catch(Exception e)
		{
			Console.WriteLine(e.Message);
		}


	}
	public class Skill
	{
		public int id { get; set; }
		public string name { get; set; }
		public string description { get; set; }
	}
}
